                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="Benefit1TitleBox"  Grid.Row="0" Grid.ColumnSpan="2" Text="{x:Bind Path=randomBenefitList[0].BenefitLabel}" TextAlignment="Center" FontSize="20"/>
                    <Image x:Name="Benefit1ImageDisplay" Grid.Row="1" Grid.Column="0" Source="{x:Bind Path=randomBenefitList[0].GetImage()}" Stretch="Uniform"/>
                    <TextBlock x:Name="Benefit1TextBox" Grid.Row="1" Grid.Column="1" Text="{x:Bind Path=randomBenefitList[0].BenefitText}" FontSize="12" TextWrapping="Wrap"/>
